<Window x:Class="WpfApp.AddRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        mc:Ignorable="d"
        Title="Add New Room" Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>

            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock
    HorizontalAlignment="Center"
    FontSize="40"
    Style="{StaticResource MaterialDesignHeadline2TextBlock}"
    Text="Add room information">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="LightBlue" Offset="0.0"/>
                        <GradientStop Color="Blue" Offset="1.0"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
  VerticalAlignment="Center"
  materialDesign:HintAssist.Hint="Room Number"
  materialDesign:HintAssist.HelperText="Room Number can not be duplicated"
                
  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Width="300"
  />
            <TextBox Grid.Column="1"
VerticalAlignment="Center"
materialDesign:HintAssist.Hint="Room Maxcapacity"
materialDesign:HintAssist.HelperText="How many people in a room?"
              
Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              Width="300"
/>

        </Grid>
        <Grid Grid.Row="2" Grid.RowSpan="2">
            <StackPanel VerticalAlignment="Center"
 >
              
                <TextBox
    Height="100"
                    Width="700"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="Room Description"
    materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"
    MaxLength="40"
    Style="{StaticResource MaterialDesignOutlinedTextBox}"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    />
                <CheckBox
x:Name="MaterialDesignOutlinedTextBoxTextCountComboBox"
Content="View Text Input Count"
                Width="700"
                FontSize="10"
/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
  VerticalAlignment="Center"
  materialDesign:HintAssist.Hint="Room Price"
  materialDesign:HintAssist.HelperText="Room Price > 0"
                
  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Width="300"
  />
            <ComboBox Grid.Column="1"
  materialDesign:HintAssist.Hint="Room Type"
  materialDesign:TextFieldAssist.PrefixText="$"
  IsEditable="True"
                      Width="300"
                      Name="ComboBox"
                      SelectionChanged="ComboBox_SelectionChanged"
 >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding RoomTypeName}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

        </Grid>
    </Grid>
</Window>
